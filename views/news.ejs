<%- include('partials/header') %>

  <main>
    <!-- News Section -->
    <section class="bg-light py-5">
      <div class="container">
        <h2 class="text-center mb-5 fw-bold text-dark">üì∞ Latest News</h2>

        <div class="row g-4">
          <% posts.forEach(post=> { %>
            <div class="col-lg-4 col-md-6">
              <div class="card border-0 shadow-sm h-100 rounded-4 overflow-hidden">

                <!-- Cover Image -->
                <div class="ratio ratio-16x9">
                  <img src="<%= post.image_url || '/images/news_logo_2.png' %>" class="card-img-top object-fit-contain"
                    alt="<%= post.title %>" style="object-fit: cover;">
                </div>

                <!-- Card Body -->
                <div class="card-body d-flex flex-column">
                  <h3 class="card-title fw-semibold text-primary">
                    <%= post.title %>
                  </h3>
                  <p class="card-text text-muted small flex-grow-1">
                    <%= post.content.replace(/(<([^>]+)>)/gi, '').substring(0, 120) %>...
                  </p>
                  <a href="/posts/<%= post.id %>" class="btn btn-outline-primary mt-auto rounded-pill">
                    Read More
                  </a>
                </div>

                <!-- Footer -->
                <div class="card-footer bg-white border-top-0 text-end">
                  <small class="text-muted">‚úçÔ∏è <%= post.written_by %></small>
                </div>

              </div>
            </div>
            <% }) %>
        </div>
      </div>
    </section>
  </main>

  <%- include('partials/footer') %>