<%- include("partials/header") %>

<main class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-10 col-md-11 col-sm-12">

      <!-- Cover Image -->
      <div class="text-center mb-4">
        <img 
          src="<%= post.image_url || '/images/news_logo.png' %>" 
          class="img-fluid rounded shadow-sm " 
          alt="Cover Image" 
          style="max-height: 450px; object-fit: cover;"
        >
      </div>

      <!-- Title -->
      <h3 class="fw-bold mb-3 text-center">
        <%= post.title %>
      </h3>

      <!-- Meta Info -->
      <div class="text-muted text-center mb-3">
        <span>By <strong><%= post.written_by %></strong></span> |
        <span><%= new Date(post.updated_at || post.created_at).toLocaleDateString('en-US', {
          year: 'numeric', month: 'long', day: 'numeric'
        }) %></span> |
        <span class="badge bg-dark text-capitalize py-1">
          <%= post.section %>
        </span>
      </div>

      <hr class="my-4">

      <!-- Post Content -->
      <article class="post-content">
        <%- post.content %>
      </article>

    </div>
  </div>
</main>

<%- include("partials/footer") %>
